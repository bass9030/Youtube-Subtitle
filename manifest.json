{
    "manifest_version": 2,
  
    "name": "Youtube Subtitle",
    "description": "Display 3rd-party(Amara) subtitles on youtube video",
    "version": "1.0.0",

    "background": {
      "scripts":["background.js"]
    },

    "browser_action": {
      "default_popup": "popup.html"
    },

    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },

    "web_accessible_resources": [
      "languages.json"
    ],

    "permissions": [
      "tabs",
      "webNavigation",
      "storage"
    ]
  }